{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": [ "ESNext" ],
		"strict": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "node",
		"baseUrl": "./src",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
